@model DreamMessenger.Models.AccountModels.ResetPassword

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dreams Chat - Reset Password</title>

    <!-- Подключение стилей CSS по ссылке -->
    <link rel="icon" href=@Url.Content("~/assets/img/favicon.png")>
    <link rel="stylesheet" href=@Url.Content("~/assets/css/bootstrap.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/assets/plugins/fontawesome/css/fontawesome.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/assets/plugins/fontawesome/css/all.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/assets/plugins/mcustomscroll/jquery.mCustomScrollbar.css")>
    <link rel="stylesheet" href=@Url.Content("~/assets/css/app.css")>
</head>
<body class="account-page">

    <div class="main-wrapper">

        <div class="content align-items-center">
            <div class="w-100 ">
                <div class="login-left">

                    <div class="account-content">
                        <!-- Заголовок сброса пароля -->
                        <div class="login-header">
                            <a href="index.html">
                                <img src=@Url.Content("~/assets/img/logo-full.png") alt="">
                            </a>
                        </div>
                        <!-- Форма сброса пароля -->
                        <div class="form-col">
                            <div class="login-text-details">
                                <h3>Reset Password</h3>
                                <p>Enter a new password for your account and click Reset Password.</p>
                            </div>
                            <!-- Форма сброса пароля -->
                            <form asp-action="ResetPassword" asp-controller="Account" method="post">
                                @Html.ValidationSummary()
                                 <div class="form-group">
                                    <label>Your Email</label>
                                    <input class="form-control form-control-lg group_formcontrol" name="model.Email" type="email" value="@Model.Email" readonly  required>
                                </div>                      
                                <div class="form-group">
                                    <label>New password</label>
                                     <input class="form-control form-control-lg group_formcontrol" name="model.Password" type="password" required>
                                </div>
                                <div class="form-group">
                                    <label>Confirm password</label>
                                     <input class="form-control form-control-lg group_formcontrol" name="model.ConfirmPassword" type="password" required>
                                 </div>
                                 <!-- Скрытое поле с токеном сброса пароля (он передается в контроллер) -->
                                 <input type="hidden" name="model.Code" value="@Model.Code">
                                <div class="pt-3">
                                    <div class="text-center">
                                        <button class="btn newgroup_create btn-block d-block w-100" type="submit">Save Password</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- Вернуться назад -->
                        <div class="back-btn-col text-center">
                            <a href="~/Account/Login"><span><i class="fas fa-caret-left"></i></span> Back</a>
                        </div>
                    </div>

                </div>
                <div class="login-right pwd-bg">
                </div>
            </div>
        </div>

    </div>

    <!-- Подключение скриптов JS по ссылке -->
    <script src=@Url.Content("assets/js/jquery-3.6.0.min.js")></script>
    <script src=@Url.Content("assets/js/bootstrap.bundle.min.js")></script>
    <script src=@Url.Content("assets/js/jquery.nicescroll.min.js")></script>
    <script src=@Url.Content("assets/plugins/mcustomscroll/jquery.mCustomScrollbar.js")></script>
    <script src=@Url.Content("assets/js/script.js")></script>
</body>
</html>
