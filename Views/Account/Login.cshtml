@model DreamMessenger.Models.AccountModels.LoginModel

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>

    <!-- Подключение стилей CSS по ссылке -->
    <link rel="icon" type="text/css" href=@Url.Content("~/assets/img/favicon.png")>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/assets/css/bootstrap.min.css")>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/assets/plugins/fontawesome/css/fontawesome.min.css")>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/assets/plugins/fontawesome/css/all.min.css")>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/assets/plugins/mcustomscroll/jquery.mCustomScrollbar.css")>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/assets/css/app.css")>
</head>

<body class="account-page">

    <div class="main-wrapper">

        <div class="content align-items-center">
            <div class="w-100 ">
                <div class="login-left">

                    <div class="account-content">
                        <!-- Заголовок авторизации -->
                        <div class="login-header">
                            <a href="~/Home/Login">
                                <img src=@Url.Content("~/assets/img/logo-full.png") alt="">
                            </a>
                        </div>
                        <!-- Форма авторизации -->
                        <div class="form-col">
                            <div class="login-text-details">
                                <h3>Log in</h3>
                                <p>Login with your Data that you entered during your Registration</p>
                            </div>
                            <form asp-controller="Account" asp-action="Login" method="post">
                                @Html.ValidationSummary()
                                
                                <div class="form-group">
                                    <label>Your Email</label>
                                    <input class="form-control form-control-lg group_formcontrol" name="model.Email" type="email" required autofocus="autofocus">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input class="form-control form-control-lg group_formcontrol" name="model.Password" type="password" required>
                                </div>
                                <div class="form-group">
                                    <label class="custom-check d-flex">
                                        <input type="checkbox" asp-for="RememberMe" name="model.RememberMe" checked>Keep me logged in
                                         <span class="checkmark"></span>
                                         
                                    </label>
                                </div>
                                <div class="pt-1">
                                    <div class="text-center">
                                        <button class="btn newgroup_create btn-block d-block w-100" type="submit">Login</button>
                                    </div>
                                </div>
                                <div class="text-center dont-have">Don’t have an account? <a href="~/Account/Signup">Signup</a></div>
                                <div class="text-center mt-3">
                                    <span class="forgot-link">
                                        <a href="~/Account/ForgotPassword" class="text-end">Forgot Password ?</a>
                                    </span>
                                </div>
                            </form>
                        </div>
                        <!-- Вернуться назад -->
                        <div class="back-btn-col text-center">
                            <a href="~/Account/Signup"><span><i class="fas fa-caret-left"></i></span> Back</a>
                        </div>
                    </div>

                </div>
                <div class="login-right">
                </div>
            </div>
        </div>

    </div>

    <!-- Подключение скриптов JS по ссылке -->
    <script src=@Url.Content("~/assets/js/jquery-3.6.0.min.js")></script>
    <script src=@Url.Content("~/assets/js/bootstrap.bundle.min.js")></script>
    <script src=@Url.Content("~/assets/js/jquery.nicescroll.min.js")></script>
    <script src=@Url.Content("~/assets/plugins/mcustomscroll/jquery.mCustomScrollbar.js")></script>
    <script src=@Url.Content("~/assets/js/script.js")></script>
</body>
</html>